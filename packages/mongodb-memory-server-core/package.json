{
  "name": "mongodb-memory-server-core",
  "version": "7.0.0-beta.14",
  "description": "MongoDB Server for testing (core package, without autodownload). The server will allow you to connect your favourite ODM or client library to the MongoDB Server and run parallel integration tests isolated from each other.",
  "main": "lib/index",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodkz/mongodb-memory-server.git",
    "directory": "packages/mongodb-memory-server-core"
  },
  "engines": {
    "node": ">=10.15.0"
  },
  "files": [
    "lib",
    "scripts"
  ],
  "keywords": [
    "mongodb",
    "mongoose",
    "mock",
    "stub",
    "mockgoose",
    "mongodb-prebuilt",
    "mongomem"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nodkz/mongodb-memory-server/issues"
  },
  "homepage": "https://github.com/nodkz/mongodb-memory-server",
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/dedent": "^0.7.0",
    "@types/find-cache-dir": "^3.2.0",
    "@types/find-package-json": "^1.1.1",
    "@types/lockfile": "^1.0.1",
    "@types/md5-file": "^4.0.2",
    "@types/mkdirp": "^1.0.1",
    "@types/mongodb": "^3.5.31",
    "@types/rimraf": "^3.0.0",
    "@types/semver": "^7.3.4",
    "@types/tar-stream": "^2.1.0",
    "@types/uuid": "^8.0.0",
    "@types/yauzl": "^2.9.1"
  },
  "dependencies": {
    "@types/tmp": "^0.2.0",
    "camelcase": "^6.1.0",
    "debug": "^4.2.0",
    "find-cache-dir": "^3.3.1",
    "find-package-json": "^1.2.0",
    "get-port": "^5.1.1",
    "https-proxy-agent": "^5.0.0",
    "lockfile": "^1.0.4",
    "md5-file": "^5.0.0",
    "mkdirp": "^1.0.4",
    "mongodb": "^3.6.2",
    "os": "^0.1.1",
    "semver": "^7.3.2",
    "tar-stream": "^2.1.4",
    "tmp": "^0.2.1",
    "tslib": "^2.0.3",
    "uuid": "^8.3.1",
    "yauzl": "^2.10.0"
  },
  "scripts": {
    "clean": "rimraf tmp lib build coverage node_modules/.cache",
    "build": "rimraf ./lib && tsc -p ./tsconfig.build.json",
    "build:tests": "rimraf ./build && tsc -p ./tsconfig.json",
    "watch": "cross-env MONGOMS_DOWNLOAD_DIR=./tmp jest --watchAll",
    "coverage": "cross-env MONGOMS_DOWNLOAD_DIR=./tmp jest --coverage",
    "lint": "yarn run eslint && yarn run tscheck",
    "eslint": "eslint -c ../../.eslintrc.js ./src --ext js,ts",
    "test": "yarn run lint && yarn run coverage",
    "test:watch": "yarn run watch",
    "tscheck": "tsc --noEmit"
  },
  "optionalDependencies": {
    "rimraf": "^3.0.2"
  }
}
